{{> navbar-home}}
<div class="jumbotron text-center" id="jumbotron">
    <h3 class="pagetitle">Recent Articles</h3>
</div>
<div class="container" id="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>
                        Save Articles to View Later
                    </strong></h3>
                </div>
                <div class="panel-body" id="well-section">
                    {{> articles}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Scrape Modal -->
<div class="modal fade" id="scrapeModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close scrapeCloseBtn" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
            Scrape Complete
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn scrapeCloseBtn" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<!-- Save Article Modal -->
<div class="modal fade" id="saveArticleModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close saveArticleCloseBtn" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
            Article Saved
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn saveArticleCloseBtn" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>