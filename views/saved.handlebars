{{> navbar}}
<div class="jumbotron text-center">
    <h3>Mongo Scraper</h3>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>
                        Saved Articles
                    </strong></h3>
                </div>
                <div class="panel-body" id="well-section">
                    {{> saved-articles}}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Notes Modal -->
<div class="modal fade" id="notesModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close notesCloseBtn" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
            Article Returned
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn notesCloseBtn" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<!-- Return Article Modal -->
<div class="modal fade" id="returnArticleModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Modal Heading</h4>
                <button type="button" class="close returnArticleCloseBtn" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
            Article Returned
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn returnArticleCloseBtn" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>